<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272965"
    tools:context="com.example.nahiduddinahammed.minidoctorproject.UserRegistrationActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="268dp"
        android:layout_height="41dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-condensed"
        android:text="রেজিস্ট্রেশন"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TVname"
        android:layout_width="271dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp"
        android:background="@drawable/text_email"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"

        android:hint="নাম"
        android:paddingLeft="10dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button"
        android:layout_width="271dp"
        android:layout_height="43dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="118dp"
        android:background="@drawable/button_registration"
        android:text="রেজিস্ট্রেশন সমপ্নন করুন"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/TVpassword"
        android:layout_width="270dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:background="@drawable/text_email"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="পাসওয়ার্ড"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/TVemail"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="217dp"
        android:background="@drawable/text_email"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:hint="ইমেইল"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="168dp" />


</RelativeLayout>
